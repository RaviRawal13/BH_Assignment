<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint_layout_parent_tab_two"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/purple_10"
    android:layout_marginBottom="@dimen/margin_bottom_layout_tab"
    android:minHeight="@dimen/min_height_layout_tab">

    <CheckBox
        android:id="@+id/checkbox_selected_tab_two"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/image_view_primary_tab_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="@dimen/padding_image_view"
        android:contentDescription="@string/beer_image"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1"
        app:layout_constraintStart_toEndOf="@id/text_view_title_tab_two"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.3" />

    <TextView
        android:id="@+id/text_view_title_tab_two"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:gravity="center_vertical"
        android:padding="@dimen/padding_title_text_view"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/image_view_primary_tab_two"
        app:layout_constraintStart_toEndOf="@id/checkbox_selected_tab_two"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Buzz" />

</androidx.constraintlayout.widget.ConstraintLayout>